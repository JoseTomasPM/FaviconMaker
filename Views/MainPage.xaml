<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="FaviconMaker.MainPage">



    <Grid ColumnDefinitions="2*,3*,2*"
          RowDefinitions="*"
          Padding="10">

        <!-- Iconos disponibles -->
        <StackLayout Grid.Column="0"
                     Spacing="10">
            <Label Text="Iconos disponibles" 
                   FontAttributes="Bold"
                   FontSize="20"/>
            <!-- Aquí irá la lista de íconos -->
            <CollectionView ItemsSource="{Binding IconItems}"
                SelectionMode="Single"
                SelectedItem="{Binding SelectedIcon}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="5" Margin="5" BackgroundColor="Gray">
                            <HorizontalStackLayout>
                                <skia:SKCanvasView
                                    PaintSurface="OnPaintIcon"
                                    HeightRequest="50"
                                    WidthRequest="50"
                                    BindingContext="{Binding}" />
                                <Label Text="{Binding Name}" FontSize="10" HorizontalOptions="Center" />
                            </HorizontalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>

        <!-- Vista previa -->
        <StackLayout Grid.Column="1"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Spacing="10">
            <Label Text="Vista previa"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Center"/>

            <skia:SKCanvasView PaintSurface="OnPaintSelectedIcon"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"
                   HeightRequest="150"
                   WidthRequest="150"
                   x:Name="SelectedIconCanvas" />
            
        </StackLayout>

        <!-- Personalización -->
        <StackLayout Grid.Column="2"
                     Spacing="10">
            <Label Text="Personalización"
                   FontAttributes="Bold"
                   FontSize="20"/>
            <Label Text="Color del fondo: (futuro)" />
            <Label Text="Color del ícono: (futuro)" />
        </StackLayout>

    </Grid>




</ContentPage>
